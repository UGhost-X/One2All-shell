// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  model         String
  lastImagePath String?
  scheme        AnnotationScheme? @relation(fields: [schemeId], references: [id])
  schemeId      Int?
  annotations   Annotation[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AnnotationScheme {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  config      String    // JSON string containing labels, colors, types
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Annotation {
  id          Int      @id @default(autoincrement())
  productId   Int
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  imagePath   String   // The path of the image being annotated
  data        String   // JSON string of all annotation objects for this image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([imagePath])
}

model DatasetVersion {
  id          Int      @id @default(autoincrement())
  productId   Int
  displayName String   @default("")
  versionName String
  moduleName  String   @default("data_augmentation")
  savePath    String
  imageCount  Int
  config      String   // JSON string of augmentation config used
  createdAt   DateTime @default(now())
  
  @@index([productId])
}

model Camera {
  id        Int      @id @default(autoincrement())
  name      String
  ip        String
  status    String   @default("offline")
  config    String?  // JSON string or additional info
  isEnabled Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TrainingRecord {
  id              Int       @id @default(autoincrement())
  productId       Int
  taskUuid        String
  labelName       String
  modelName       String
  config          String
  status          String    @default("pending")
  progress        Float     @default(0)
  totalEpochs     Int?
  currentEpoch    Int?
  latestIter      Int?
  metrics         String    @default("[]")
  logs            String    @default("[]")
  startTime       DateTime?
  endTime         DateTime?
  hasBestModel    Boolean   @default(false)
  outputPath      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([taskUuid, labelName])
  @@index([productId])
  @@index([taskUuid])
  @@index([status])
}
